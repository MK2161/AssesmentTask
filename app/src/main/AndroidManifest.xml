<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" tools:ignore="ProtectedPermissions"/>
    <application
        android:allowBackup="true"
        android:name=".application.MyApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_qpay"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AssesmentTask"
        tools:targetApi="31">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.SendMoneyActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.UpiActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.PaymentPendingScreenActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.VerifyDeviceActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.SelectYourBankActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.profile.AddAccountActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.AccountLoadingScreen"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.DownloadPendingScreen"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.DownloadSuccessScreen"
            android:exported="true">
        </activity>


    </application>

</manifest>