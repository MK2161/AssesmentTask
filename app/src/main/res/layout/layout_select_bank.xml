<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/uiCvImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/uiIvImages"
            android:contentDescription="@string/basic_image"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_sbi" />
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/uiTvBankName"
        android:text="State Bank of India"
        android:textColor="@color/grey"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gilroy_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/uiCvImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>