<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uiCvTopBar"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiTvSbiName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/dark_grey"
            android:text="State Bank of India"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiTvSbiAccNo"
            app:layout_constraintTop_toBottomOf="@+id/uiTvSbiName"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/grey"
            android:text="xxxx4989"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/uiTvSbiName"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_bharath_bill_pay"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uiCvToBankDetails"
        android:layout_width="match_parent"
        android:background="#F5F5F5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiCvTopBar"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiTvTo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/dark_grey"
            android:text="To"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiTvSending"
            app:layout_constraintTop_toBottomOf="@+id/uiTvTo"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/grey"
            android:text="xxxx4989"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uiTvQpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/uiTvTo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
            android:text="QPAY"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/dark_grey"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/uiTvQpay"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
            android:drawablePadding="6dp"
            android:text="â‚¹10,023"
            android:drawableEnd="@drawable/ic_bottom_bar"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/dark_grey"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uiTvUpiPin"
        android:text="ENTER 6-DIGIT UPI PIN"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiCvToBankDetails"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/frameLayout"
        android:background="@color/white"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/uiTvUpiPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtOne"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtTwo"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtThree"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtFour"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                /><EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtFive"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginStart="10dp"
                android:cursorVisible="false"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/uiEtSix"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:hint=""
                />
        </LinearLayout>
        
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uiMcvSendLink"
        android:layout_margin="50dp"
        app:cardBackgroundColor="#FFE395"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/uiIvInfoIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "6dp"
                android:src="@drawable/info_icons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="4dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/uiIvInfoIcons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="You are transferring money from your  State \n Bank of India account to Qpay"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>