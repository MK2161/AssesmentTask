<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Ring with Stroke -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <stroke
                android:width="1dp"
                android:color="@color/black"/> <!-- Stroke color and width -->
            <size android:width="24dp" android:height="24dp"/> <!-- Size of the outer shape -->
        </shape>
    </item>

    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/> <!-- Inner circle color -->
            <size android:width="20dp" android:height="20dp"/> <!-- Size of the inner shape -->
        </shape>
    </item>
</layer-list>
