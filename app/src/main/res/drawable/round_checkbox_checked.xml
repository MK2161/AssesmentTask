<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape for the checked state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4CAF50"/> <!-- Green background for checked state -->
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

    <!-- White tick mark overlay -->
    <item android:drawable="@drawable/checkmark" /> <!-- Reference to the checkmark drawable -->

</layer-list>
